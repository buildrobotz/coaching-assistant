<div class="px-4 py-6 sm:px-0">
  <div class="mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Send One-Off Email</h2>
    <p class="mt-2 text-sm text-gray-700">Send a custom email to a client</p>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: admin_one_off_emails_path, class: "space-y-6" do |f| %>
        <!-- Client Selection -->
        <div>
          <%= label_tag :client_id, "Select Client", class: "block text-sm font-medium text-gray-700" %>
          <%= select_tag :client_id,
              options_from_collection_for_select(@clients, :id, :name),
              { prompt: "Choose a client..." },
              class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md",
              required: true %>
        </div>

        <!-- Subject -->
        <div>
          <%= label_tag :subject, "Email Subject", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag :subject, nil,
              class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
              placeholder: "Message from Your Coach" %>
          <p class="mt-1 text-sm text-gray-500">Leave blank to use default subject</p>
        </div>

        <!-- Content Source Selection -->
        <div class="bg-gray-50 p-4 rounded-md">
          <label class="text-base font-medium text-gray-900">Content Source</label>
          <p class="text-sm leading-5 text-gray-500 mb-4">Choose where to get the email content from</p>

          <fieldset class="mt-4">
            <div class="space-y-4">
              <div class="flex items-center">
                <%= radio_button_tag :use_lesson, "0", true,
                    class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300",
                    onclick: "toggleContentSource(false)" %>
                <%= label_tag :use_lesson_0, "Write custom markdown", class: "ml-3 block text-sm font-medium text-gray-700" %>
              </div>

              <div class="flex items-center">
                <%= radio_button_tag :use_lesson, "1", false,
                    class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300",
                    onclick: "toggleContentSource(true)" %>
                <%= label_tag :use_lesson_1, "Use existing lesson (from GitHub)", class: "ml-3 block text-sm font-medium text-gray-700" %>
              </div>
            </div>
          </fieldset>
        </div>

        <!-- Lesson Selection (hidden by default) -->
        <div id="lesson-selection" style="display: none;">
          <%= label_tag :lesson_id, "Select Lesson", class: "block text-sm font-medium text-gray-700" %>
          <%= select_tag :lesson_id,
              grouped_options_for_select(
                @lessons.group_by(&:course_module).map { |mod, lessons|
                  [mod.name, lessons.map { |l| [l.title, l.id] }]
                }
              ),
              { prompt: "Choose a lesson..." },
              class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
          <p class="mt-1 text-sm text-gray-500">Content will be loaded from GitHub (Phase 3 feature)</p>
        </div>

        <!-- Markdown Editor -->
        <div id="markdown-editor">
          <%= label_tag :markdown_content, "Markdown Content", class: "block text-sm font-medium text-gray-700" %>
          <%= text_area_tag :markdown_content, nil,
              rows: 15,
              class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md font-mono",
              placeholder: "# Welcome!\n\nWrite your lesson content here using **Markdown**.\n\n## Example Section\n\n- Bullet point 1\n- Bullet point 2\n\n```ruby\ndef example\n  puts 'Code blocks are supported!'\nend\n```" %>
          <div class="mt-2 text-sm text-gray-500">
            <p class="font-medium mb-1">Markdown Guide:</p>
            <ul class="list-disc list-inside space-y-1">
              <li><code># Heading</code> - Creates a heading</li>
              <li><code>**bold**</code> - Bold text</li>
              <li><code>*italic*</code> - Italic text</li>
              <li><code>- item</code> - Bullet list</li>
              <li><code>```language ... ```</code> - Code block with syntax highlighting</li>
            </ul>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-end space-x-3 border-t pt-6">
          <%= link_to "Cancel", admin_root_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>

          <%= button_tag type: "button",
              onclick: "previewEmail()",
              class: "inline-flex justify-center py-2 px-4 border border-indigo-600 shadow-sm text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            Preview
          <% end %>

          <%= f.submit "Send Email",
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700",
              data: { confirm: "Are you sure you want to send this email?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Preview Modal (hidden by default) -->
<div id="preview-modal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="closePreview()"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-3xl sm:w-full sm:p-6">
      <div class="absolute top-0 right-0 pt-4 pr-4">
        <button type="button" onclick="closePreview()" class="bg-white rounded-md text-gray-400 hover:text-gray-500">
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="sm:flex sm:items-start">
        <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4" id="modal-title">
            Email Preview
          </h3>
          <div id="preview-content" class="mt-2 border rounded p-4 bg-gray-50 max-h-96 overflow-y-auto">
            <!-- Preview content will be loaded here -->
          </div>
        </div>
      </div>
      <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
        <button type="button" onclick="closePreview()" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 sm:ml-3 sm:w-auto sm:text-sm">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function toggleContentSource(useLesson) {
    const lessonSelection = document.getElementById('lesson-selection');
    const markdownEditor = document.getElementById('markdown-editor');

    if (useLesson) {
      lessonSelection.style.display = 'block';
      markdownEditor.style.display = 'none';
    } else {
      lessonSelection.style.display = 'none';
      markdownEditor.style.display = 'block';
    }
  }

  function previewEmail() {
    const clientId = document.querySelector('[name="client_id"]').value;
    const useLesson = document.querySelector('[name="use_lesson"]:checked').value;
    const lessonId = document.querySelector('[name="lesson_id"]').value;
    const markdownContent = document.querySelector('[name="markdown_content"]').value;

    if (!clientId) {
      alert('Please select a client first');
      return;
    }

    if (useLesson === '0' && !markdownContent.trim()) {
      alert('Please enter some markdown content');
      return;
    }

    if (useLesson === '1' && !lessonId) {
      alert('Please select a lesson');
      return;
    }

    const formData = new FormData();
    formData.append('client_id', clientId);
    formData.append('use_lesson', useLesson);
    formData.append('lesson_id', lessonId);
    formData.append('markdown_content', markdownContent);

    fetch('<%= preview_admin_one_off_emails_path %>', {
      method: 'POST',
      body: formData,
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      }
    })
    .then(response => response.text())
    .then(html => {
      document.getElementById('preview-content').innerHTML = html;
      document.getElementById('preview-modal').classList.remove('hidden');
    })
    .catch(error => {
      alert('Error loading preview: ' + error);
    });
  }

  function closePreview() {
    document.getElementById('preview-modal').classList.add('hidden');
  }
</script>
