# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Email Provider Configuration
EMAIL_PROVIDER=resend  # Options: 'resend' (recommended), 'gmail'
FROM_EMAIL=onboarding@resend.dev  # Use your verified domain or onboarding@resend.dev for testing

# Resend API Configuration (recommended - simple setup)
RESEND_API_KEY=re_your_api_key_here

# Gmail API Configuration (if using gmail provider - more complex setup)
# GMAIL_CLIENT_ID=your_gmail_client_id_here
# GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
# GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Application URL (for generating completion links)
APP_URL=http://localhost:3000

# GitHub Configuration (for lesson content)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=your_username/your_lessons_repo
GITHUB_BRANCH=main

# Redis Configuration (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Streak Configuration
STREAK_MODE=pause  # Options: 'pause' or 'reset'

# Rails Configuration
RAILS_ENV=development
RACK_ENV=development

# Production only (don't set in development)
# RAILS_MASTER_KEY=your_master_key_from_config/master.key
# DATABASE_URL=postgresql://user:password@host:5432/database
